{
    "include": ["**/*.ts"],
    "compilerOptions": {
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "module": "ESNext",
        "target": "ESNext",
        "lib": ["ESNext"],
        "forceConsistentCasingInFileNames": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "outDir": "dst",
        "allowImportingTsExtensions": true,
        "noEmit": true
    }
}
